@model ASOMAMECO.Web.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Asociación de Maestros de Ceremonias</h1>
                    <p class="lead text-center">Bienvenido al sistema de gestión de ASOMAMECO</p>
                    @if (Model.EventoActual != null)
                    {
                        <div class="alert alert-info mt-4">
                            <h4 class="alert-heading">Evento Activo Hoy</h4>
                            <hr>
                            <p><strong>Nombre:</strong> @Model.EventoActual.Nombre</p>
                            <p><strong>Fecha:</strong> @Model.EventoActual.Fecha.ToString("dd/MM/yyyy")</p>
                            <a asp-controller="Asistencia" asp-action="RegistrarPorEvento" asp-route-id="@Model.EventoActual.Id" class="btn btn-primary">Registrar Asistencia</a>
                            <a asp-controller="Eventos" asp-action="Details" asp-route-id="@Model.EventoActual.Id" class="btn btn-secondary">Ver Detalles</a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary mt-4">
                            <h4 class="alert-heading">No hay eventos programados para hoy</h4>
                            <hr>
                            <p>No se encontraron eventos activos para la fecha actual.</p>
                            <a asp-controller="Eventos" asp-action="Index" class="btn btn-primary">Ver Todos los Eventos</a>
                            <a asp-controller="Eventos" asp-action="Create" class="btn btn-success">Crear Nuevo Evento</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Miembros</h5>
                    <p class="card-text">Administre los miembros de la asociación.</p>
                    <a asp-controller="Miembros" asp-action="Index" class="btn btn-primary">Ver Miembros</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Eventos</h5>
                    <p class="card-text">Administre los eventos de la asociación.</p>
                    <a asp-controller="Eventos" asp-action="Index" class="btn btn-primary">Ver Eventos</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Asistencia</h5>
                    <p class="card-text">Administre la asistencia a los eventos.</p>
                    <a asp-controller="Eventos" asp-action="Index" class="btn btn-primary">Seleccionar Evento</a>
                </div>
            </div>
        </div>
    </div>
</div>