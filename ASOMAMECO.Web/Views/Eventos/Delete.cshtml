@model ASOMAMECO.Web.ViewModels.EventoViewModel
@{
    ViewData["Title"] = "Eliminar Evento";
}
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title text-danger mb-4">¿Está seguro que desea eliminar este evento?</h1>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">@Model.Evento.Nombre</dd>

                        <dt class="col-sm-3">Fecha:</dt>
                        <dd class="col-sm-9">@Model.Evento.Fecha.ToString("dd/MM/yyyy")</dd>

                    </dl>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i> Esta acción no se puede deshacer y eliminará también toda la información de asistencia relacionada con este evento.
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Evento.Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>