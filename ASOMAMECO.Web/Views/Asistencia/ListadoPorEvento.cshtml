@model IEnumerable<ASOMAMECO.Business.Models.AsistenciaDto>
@{
    ViewData["Title"] = "Listado de Asistencia";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title mb-4">Listado de Asistencia</h1>

                    <div class="alert alert-info mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5>Evento: @ViewBag.EventoNombre</h5>
                                <p class="mb-0">Fecha: @ViewBag.EventoFecha</p>
                            </div>
                            <div class="text-end">
                                <h4 class="mb-0">Total: <span class="badge bg-primary">@ViewBag.TotalAsistentes</span></h4>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <a asp-action="ReporteGeneral" asp-route-id="@ViewBag.EventoId" class="btn btn-primary">
                            <i class="bi bi-file-earmark-text"></i> Generar Reporte
                        </a>
                        <a asp-action="RegistrarPorEvento" asp-route-id="@ViewBag.EventoId" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Registrar Nueva Asistencia
                        </a>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Número de Asociado</th>
                                        <th>Cédula</th>
                                        <th>Nombre</th>
                                        <th>Fecha de Registro</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.NumeroAsociado</td>
                                            <td>@item.Cedula</td>
                                            <td>@item.NombreMiembro</td>
                                            <td>@item.FechaHoraRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No hay registros de asistencia para este evento.
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-controller="Eventos" asp-action="Details" asp-route-id="@ViewBag.EventoId" class="btn btn-secondary">Volver a Detalles</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>